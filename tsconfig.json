{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "test/**/*"]
}